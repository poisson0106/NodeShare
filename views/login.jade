doctype html
// saved from url=(0038)http://v3.bootcss.com/examples/signin/
html(lang='zh-CN')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！
    meta(name='description', content='')
    meta(name='author', content='')
    title Signin Template for Bootstrap
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/signin.css', rel='stylesheet')
    script(src='/javascripts/ie-emulation-modes-warning.js')
    script(type='text/javascript' src='/javascripts/jquery-1.11.1.min.js')
    script(type='text/javascript' src='/javascripts/jquery.blockUI.js')
    script(type='text/javascript' src='/javascripts/init.js')
  body
    .container
      form#login.form-signin(method='post', action='submit')
        h2.form-signin-heading Please sign in
        label.sr-only(for='inputEmail') Username
        input#inputEmail.form-control(type='text', placeholder='Username', required='', autofocus='',name='username')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', placeholder='Password', required='',name='password')
        .checkbox
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        button#sbmt.btn.btn-lg.btn-primary.col-sm-6(type='button') Sign in
        button#rgst.btn.btn-lg.btn-default.col-sm-6(type='button') Register

      #reg.col-sm-12(style="display:none")
        form#register.form-sign(method='post', action='register')
          h2.form-signin-heading Please Input information
          label.sr-only(for='regName') Username
          input#regName.form-control(type='text', placeholder='Username', required='', autofocus='',name='username')
          label.sr-only(for='regPassword') Password
          input#regPassword.form-control(type='password', placeholder='Password', required='',name='password')
  
          button#rgstsbmt.btn.btn-lg.btn-primary.col-sm-6(type='button') Register
          button#close.btn.btn-lg.btn-default.col-sm-6(type='button') Close