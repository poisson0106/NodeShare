doctype html
// saved from url=(0038)http://v3.bootcss.com/examples/signin/
html(lang='zh-CN')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！
    meta(name='description', content='')
    meta(name='author', content='')
    title Main Page
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/font-awesome.min.css', rel='stylesheet')
    link(href='/stylesheets/mainpage.css', rel='stylesheet')
    script(href='text/javascript', src='/javascripts/jquery-1.11.1.min.js')
    script(type='text/javascript' , src='/javascripts/bootstrap.min.js')
    script(type='text/javascript' , src='/javascripts/socket.io.js')
    script(type='text/javascript' , src='/javascripts/operate.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') NodeShare
        ul.nav.navbar-nav.navbar-right
          li
            a#username(value='#{username}') #{username}
          li
            a#logout(style='cursor:pointer') Logout
    .container-fluid
      .row
        .col-sm-2
          .panel.panel-default
            .panel-heading Panel heading
            ul#onlinelist.list-group
        .col-sm-10
          .col-sm-12.content
          .col-sm-12.msgcontainer
            .col-sm-10
              textarea#msg.form-control(style='height:100px;resize:none;')
            .col-sm-2
              button#send.btn.btn-success.btn-lg.btn-block(type='button', style='height:100px') Send
    input#pswd(type='hidden',value='#{password}')